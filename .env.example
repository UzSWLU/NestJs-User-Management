# ============================================
# Application
# ============================================
NODE_ENV=production
PORT=3000
TZ=Asia/Tashkent

# ============================================
# Database Configuration
# ============================================
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_secure_password_here
DB_NAME=auth_management
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_jwt_secret_key_here_at_least_32_characters
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_at_least_32_characters
JWT_REFRESH_EXPIRATION=7d

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Rate Limiting
# ============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ============================================
# File Upload
# ============================================
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# ============================================
# Docker & Deployment
# ============================================
API_PORT=3000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# GitHub Container Registry (for CI/CD)
GITHUB_REPOSITORY=yourorg/management
IMAGE_TAG=latest

# ============================================
# Server Configuration (for CI/CD)
# ============================================
# Add these as GitHub Secrets, not in .env file
# SERVER_HOST=your.server.ip.or.domain
# SERVER_USER=deploy
# SSH_PRIVATE_KEY=<your_ssh_private_key>
# APP_URL=https://api.yourdomain.com
