# Production Environment Template
# Copy this to .env.production on the server

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=auth_user
DB_PASSWORD=YOUR_STRONG_PASSWORD_HERE
DB_NAME=auth_management

# MySQL Root Password (for initial setup)
MYSQL_ROOT_PASSWORD=YOUR_MYSQL_ROOT_PASSWORD_HERE
MYSQL_DATABASE=auth_management
MYSQL_USER=auth_user
MYSQL_PASSWORD=YOUR_STRONG_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=YOUR_JWT_SECRET_HERE
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=YOUR_REFRESH_SECRET_HERE
JWT_REFRESH_EXPIRATION=7d

# API Configuration
API_PORT=3000
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# OAuth URLs (IMPORTANT!)
BACKEND_URL=https://auth.uzswlu.uz
FRONTEND_CALLBACK_URL=https://front.uzswlu.uz/callback

# Timezone
TZ=Asia/Tashkent

